<div class="container">
    <div class="row">
        <div class="col-sm-12 col-sm-6 col-sm-4 col-sm-offset-3">
            <h1 class="text-center"> New Pin</h1>
            <%= form_for @pin do |f| %>
                <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_field :title, class: "form-control" %>
                </div>

                 <div class="form-group">
                    <%= f.label :image_url %>
                    <%= f.url_field :image_url, class: "form-control" %>
                </div>

                <div>
                    <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
                </div>
            <% end %>
        </div>
    </div>
</div>